{
  "name": "robofriends",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://aneagoie.github.io/robofriends-pwa",
  "dependencies": {
    "gh-pages": "^3.2.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-scripts": "^4.0.3",
    "redux": "^4.1.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.4.0",
    "tachyons": "^4.12.0"
  },
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "jest-coverage": "./node_modules/.bin/jest --coverage",
    "eject": "react-scripts eject"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.6",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "fetch-mock": "^9.11.0",
    "nock": "^13.2.4",
    "node-fetch": "^3.2.3",
    "redux-mock-store": "^1.5.4",
    "supertest": "^6.2.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "./src/**"
    ],
    "watchPathIgnorePatterns": [
      "__snapshots__"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
